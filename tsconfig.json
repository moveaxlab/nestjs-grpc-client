{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "module": "NodeNext",
    "removeComments": true,
    "sourceMap": false,
    "declarationMap": false,
    "lib": ["ES2021"],
    "target": "ESNext",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "noEmit": true,
    "rootDirs": ["./tests", "./src"],
  },
  "include": [
    "./tests",
    "./src"
  ]
}
